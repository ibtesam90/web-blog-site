<%- include("partials/header.ejs") %>

<!--This is the space for main body.-->

<div class=" container bd-example p-3 mt-3 mb-3">
    <form method="post" action="/sign-in/submit">
        <div class="form-group row m-3">
            <label for="name" class="col-md-4 col-form-label">Name</label>
            <div class="col-md-6">
              <input type="text" class="form-control" id="name" name="name" placeholder="Name">
            </div>
          </div>
      <div class="form-group row m-3">
        <label for="inputEmail3" class="col-md-4 col-form-label">Email</label>
        <div class="col-md-6">
          <input type="email" class="form-control" id="inputEmail3"  name="email" placeholder="Email">
        </div>
      </div>
      <div class="form-group row m-3">
        <label for="inputPassword3" class="col-md-4 col-form-label">Password</label>
        <div class="col-md-6">
          <input type="password" class="form-control" id="inputPassword3" name="password" placeholder="Password">
        </div>
      </div>

      <div class="form-group row m-3 justify-content-end">
        <div class="col-md-6">
          <button type="submit" class="btn btn-primary">Sign in / Sign Up</button>
        </div>
      </div>
    </form>
    </div>


